<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_login" HorizontalAlignment="Left" Height="48" Margin="227,147,0,0" TextWrapping="Wrap" Text="login" VerticalAlignment="Top" Width="221" TextChanged="TextBox_TextChanged"/>
        <PasswordBox x:Name="pass" HorizontalAlignment="Left" Height="48" Margin="227,250,0,0" VerticalAlignment="Top" Width="221"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="35" Margin="255,364,0,0" VerticalAlignment="Top" Width="228" Click="Button_Click"/>

    </Grid>
</Window>
